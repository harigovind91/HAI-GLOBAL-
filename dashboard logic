// logic.js का नया हिस्सा

// दुकानदार के लिए कैमरा फंक्शन
function openCamera() {
    if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
        navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
        .then(function(stream) {
            alert("Camera Access Granted - Rear Camera Active");
            // यहाँ कैमरा स्ट्रीम को दिखाने का लॉजिक आएगा
        });
    }
}

// रजिस्ट्रेशन डाटा सेविंग
function registerSeller() {
    const sellerData = {
        role: 'SELLER',
        shop: document.getElementById('s-shop').value,
        pin: document.getElementById('s-pin').value,
        // ... अन्य सभी डेटा
    };
    localStorage.setItem('active_seller', JSON.stringify(sellerData));
    alert("दुकानदार डेशबोर्ड तैयार है!");
    location.href = 'seller-dashboard.html';
}

function registerRider() {
    const riderData = {
        role: 'RIDER',
        name: document.getElementById('r-name').value,
        bank: document.getElementById('r-bank').value,
        // ... अन्य सभी डेटा
    };
    localStorage.setItem('active_rider', JSON.stringify(riderData));
    alert("डेलिवरी डेशबोर्ड तैयार है!");
    location.href = 'rider-dashboard.html';
}
